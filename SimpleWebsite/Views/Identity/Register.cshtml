﻿﻿@using SimpleWebsite.ViewModels.IdentityViewModel

@model RegisterViewModel

<!-- Header -->
<div class="py-5 text-center">
    <h2>Account Register form</h2>
    <p class="lead">Haven't Registered? Register an account here!</p>
</div>

<!-- Registration Form -->
<form asp-controller="Identity" asp-action="Register" method="post" role="form">

    <div class="p-4 p-md-5 border rounded-3 bg-body-tertiary">

        <!-- Right Side -->
        <div class="col-md-5 col-lg-4 order-md-last">
            <!-- OAuth -->
        </div>

        <!-- Left Side -->
        <div class="col-md-7 col-lg-8">
            <h4 class="mb-3">Account Registration Details</h4>
            <form class="needs-validation" novalidate="">
                <div class="row g-3">

                    <!-- Name -->
                    <div class="col-sm-12">
                        <label asp-for="Name" class="form-label">Name</label>
                        <input asp-for="Name" type="text" class="form-control" id="lastName" placeholder="" value="" required>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <!-- Email Address -->
                    <div class="col-12">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" type="email" class="form-control" id="email" placeholder="you@example.com">
                        <div id="emailHelpBlock" class="form-text">
                            Please enter a valid email address for verification.
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Password -->
                    <div class="col-12">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Password">
                        <div id="passwordHelpBlock" class="form-text">
                            Your password must be at least 6 characters long.
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirm password" placeholder="Confirm Password">
                        <div id="confirmPasswordHelpBlock" class="form-text">
                            Confirm your Password here
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <hr class="my-4">

                <!-- Register -->
                <div class="form-group mb-3">
                    <button class="w-100 btn btn-primary btn-lg" type="submit">Register</button>
                </div>

                <hr class="my-4">

                <!-- Login -->
                <p>
                    <a class="m-3" asp-action="Login">Already a Registered user?</a>
                </p>

                <!-- T & C -->
                <small class="text-body-secondary form-text mb-5">® By clicking Register, you agree to the terms of use.</small>

            </form>
        </div>

    </div>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}